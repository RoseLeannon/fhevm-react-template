{
  "name": "@fhevm/universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential smart contract frontends - Framework agnostic",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.mjs",
      "require": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./vue": {
      "import": "./dist/vue.mjs",
      "require": "./dist/vue.js",
      "types": "./dist/vue.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/react.ts src/vue.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/react.ts src/vue.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "blockchain",
    "zama",
    "privacy",
    "confidential",
    "sdk",
    "web3",
    "ethereum"
  ],
  "author": "FHEVM SDK Contributors",
  "license": "MIT",
  "peerDependencies": {
    "ethers": "^6.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "fhevmjs": "^0.5.0",
    "@zama-fhe/oracle-solidity": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zama-ai/fhevm-react-template"
  },
  "bugs": {
    "url": "https://github.com/zama-ai/fhevm-react-template/issues"
  },
  "homepage": "https://github.com/zama-ai/fhevm-react-template#readme"
}
