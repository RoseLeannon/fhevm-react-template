{
  "name": "fhevm-universal-sdk-monorepo",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic toolkit for confidential smart contracts",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist examples/*/node_modules examples/*/.next",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "blockchain",
    "zama",
    "sdk",
    "web3",
    "ethereum",
    "confidential-computing"
  ],
  "author": "FHEVM SDK Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zama-ai/fhevm-react-template.git"
  },
  "bugs": {
    "url": "https://github.com/zama-ai/fhevm-react-template/issues"
  },
  "homepage": "https://github.com/zama-ai/fhevm-react-template#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
