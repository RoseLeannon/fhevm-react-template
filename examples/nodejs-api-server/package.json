{
  "name": "nodejs-api-server",
  "version": "1.0.0",
  "description": "Node.js API Server demonstrating FHEVM SDK server-side encryption/decryption",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "cli": "tsx src/cli.ts",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "fhevm",
    "encryption",
    "nodejs",
    "express",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fhevm/sdk": "^0.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
